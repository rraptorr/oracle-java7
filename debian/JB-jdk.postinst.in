#!/bin/sh

set -e

priority=@priority@
basediralias=/@basediralias@
mandir=/@basediralias@/man
jdiralias=@jdiralias@
srcext=1.gz
dstext=1.gz
jdk_tools='@jdk_tools@'

case "$1" in
configure)
    for i in $jdk_tools; do
	unset slave1 || true
        if [ -e $mandir/man1/$i.$srcext ]; then
	    slave1="--slave \
		/usr/share/man/man1/$i.$dstext \
                $i.$dstext \
                $mandir/man1/$i.$srcext"
	fi
        update-alternatives \
            --install \
            /usr/bin/$i \
            $i \
            $basediralias/bin/$i \
            $priority \
	    $slave1
    done

    ;;
esac

#DEBHELPER#

exit 0
